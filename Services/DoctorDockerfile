FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app
EXPOSE 80
EXPOSE 443

COPY DoctorAPI/DoctorAPI/*.csproj DoctorAPI/DoctorAPI/
COPY DoctorAPI/DoctorAPI.Application/*.csproj DoctorAPI/DoctorAPI.Application/
COPY DoctorAPI/DoctorAPI.Core/*.csproj DoctorAPI/DoctorAPI.Core/
COPY DoctorAPI/DoctorAPI.Infrastructure/*.csproj DoctorAPI/DoctorAPI.Infrastructure/
COPY DoctorAPI/DoctorAPI.Caching/*.csproj DoctorAPI/DoctorAPI.Caching/
COPY Shared/Shared/*.csproj Shared/Shared/

RUN dotnet restore DoctorAPI/DoctorAPI/DoctorAPI.csproj

COPY . .

RUN dotnet publish DoctorAPI/DoctorAPI/DoctorAPI.csproj -c Release -o out

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/out .

ENTRYPOINT ["dotnet", "DoctorAPI.dll"]