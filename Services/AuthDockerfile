FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app
EXPOSE 80
EXPOSE 443

COPY AuthAPI/AuthAPI/*.csproj AuthAPI/AuthAPI/
COPY AuthAPI/AuthAPI.Application/*.csproj AuthAPI/AuthAPI.Application/
COPY AuthAPI/AuthAPI.Core/*.csproj AuthAPI/AuthAPI.Core/
COPY AuthAPI/AuthAPI.Infrastructure/*.csproj AuthAPI/AuthAPI.Infrastructure/
COPY Shared/Shared/*.csproj Shared/Shared/

RUN dotnet restore AuthAPI/AuthAPI/AuthAPI.csproj

COPY . .

RUN dotnet publish AuthAPI/AuthAPI/AuthAPI.csproj -c Release -o out

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/out .
ENTRYPOINT ["dotnet", "AuthAPI.dll"]